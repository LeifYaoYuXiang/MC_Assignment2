<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.fruits">

    <application
        android:allowBackup="true"
        android:icon="@drawable/avocado"
        android:label="@string/app_name"
        android:roundIcon="@drawable/avocado"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".CherryActivity"
            android:label="Cherry樱桃"></activity>
        <activity android:name=".BananaActivity"
            android:label="Banana香蕉"/>
        <activity android:name=".GrapeActivity"
            android:label="Grape葡萄"/>
        <activity android:name=".WatermelonActivity"
            android:label="Watermelon西瓜"/>
        <activity android:name=".LemonActivity"
            android:label="Lemon柠檬"/>
        <activity android:name=".AppleActivity"
            android:label="Apple苹果"/>
        <activity
            android:name=".MainActivity"
            android:configChanges="locale">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>